# ======================================================
# DJANGO GÜVENLİK AYARLARI
# ======================================================
DJANGO_SECRET_KEY=your-super-secret-key-here-change-in-production  # Django gizli anahtarı, üretimde değiştirilmeli
DEBUG=False                                                         # Hata ayıklama modu kapalı (prod ortamı)
ALLOWED_HOST=yourdomain.com                                         # Django'nun kabul ettiği hostlar

# ======================================================
# VERİTABANI KONFİGÜRASYONU
# ======================================================
DB_NAME=helpdesk_db                                                 # Veritabanı adı
DB_USER=postgres                                                    # Veritabanı kullanıcı adı
DB_PASSWORD=your-secure-password                                    # Veritabanı şifresi
DB_HOST=localhost                                                   # Veritabanı sunucusu
DB_PORT=5432                                                        # Veritabanı portu

# ======================================================
# GÜVENLİK AYARLARI (ÜRETİM ORTAMI)
# ======================================================
USE_HTTPS=True                                                      # HTTPS kullanımını etkinleştir
SECURE_SSL_REDIRECT=True                                             # Tüm HTTP isteklerini HTTPS'e yönlendir

# ======================================================
# E-POSTA KONFİGÜRASYONU (OPSİYONEL)
# ======================================================
EMAIL_HOST=smtp.gmail.com                                           # SMTP sunucusu
EMAIL_PORT=587                                                      # SMTP portu
EMAIL_HOST_USER=your-email@gmail.com                                 # Gönderici e-posta
EMAIL_HOST_PASSWORD=your-app-password                                # Gönderici e-posta şifresi veya uygulama şifresi
EMAIL_USE_TLS=True                                                   # TLS kullanımı

# ======================================================
# ÖNBELLEK (CACHE) AYARLARI
# ======================================================
CACHE_BACKEND=redis                                                 # Önbellek sistemi
CACHE_LOCATION=redis://127.0.0.1:6379/1                              # Redis bağlantı URL'i

# ======================================================
# LOG (KAYIT TUTMA) AYARLARI
# ======================================================
LOG_LEVEL=INFO                                                      # Log seviyesi
LOG_FILE_PATH=/var/log/helpdesk/                                     # Log dosyalarının tutulacağı dizin

# ======================================================
# HIZ SINIRLAMALARI (RATE LIMITING)
# ======================================================
LOGIN_RATE_LIMIT=5                                                  # Belirli süre içinde max giriş denemesi
SIGNUP_RATE_LIMIT=3                                                 # Belirli süre içinde max kayıt denemesi
API_RATE_LIMIT=1000                                                 # API çağrıları için limit
# Example environment variables for local development
# Copy this to a file named `.env` (do NOT commit `.env`) and edit values.

# Environment: development or production
ENV=development

# Django core
DJANGO_SECRET_KEY=replace-this-with-a-secret-for-prod
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Postgres example)
DB_NAME=helpdesk_db
DB_USER=postgres
DB_PASSWORD=change_me
DB_HOST=localhost
DB_PORT=5432

# Logging
DJANGO_LOG_LEVEL=INFO
